{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": false,
        "target": "es5"
    },
    "include": [
        "index.ts",
        "src/*.ts",
        "node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "./**/*.ngfactory.ts",
        "./**/*.d.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
